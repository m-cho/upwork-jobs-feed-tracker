{
	"manifest_version": 2,
	"name": "Upwork jobs feed tracker",
	"description": "Freelancer on upwork? Meet Upwork jobs feed tracker. Whenever new job appears in your feed you will get an instant notification!",
	"version": "1.2.1",
	
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"persistent": true,
		"scripts": [
			"background.js"
		]
	},
	"permissions": [
		"alarms",
		"background",
		"notifications",
		"storage",
		"https://www.upwork.com/"
	],
	"options_ui": {
		"page": "options.html"
	}
}
